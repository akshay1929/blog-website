<div class="author">
    <h1 class="author_heading"> Hi, I am Akshay.</h1>
    <p class="author_body">Backend Developer.</p>
</div>

<img src=" /img/hero-image.png" alt="description" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles_title">Latest Posts</h2>

    <ul class="article-ul">
        
        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span class="body_text"> <%= post.title %></span>
                <span class="article-list-date"><%= post.createdAt.toLocaleDateString('en-US')%></span>
            </a>
        </li>
        <% }) %>
    </ul>
    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
    
</section>